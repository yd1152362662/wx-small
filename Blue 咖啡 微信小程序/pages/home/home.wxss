/* pages/home/home.wxss */

/* 全局样式 */
text {
  font-family:serif;
}
/* 全局样式 */

/* top star */
.home_top {
  position: relative;
  width: 740rpx;
  margin-left: 5rpx;
}
.swiper1 {
  width: 100%;
  height: 400rpx;
}
.clear {
  clear: both;
}
.home_top_image {
  width: 100%;
  height: 400rpx;
}

.home_top_text1 {
  position: absolute;
  top: 145rpx;
  left: 98rpx;
  font-size: 20rpx;
}
.home_top_text2 {
  position: absolute;
  top: 181rpx;
  left: 100rpx;
  font-size: 25rpx;
}

/* top stop */

/* plane start */
.plane {
  width: 744rpx;
  text-align: center;
  border-top: 4rpx solid #ccc;
  border-bottom: 4rpx solid #ccc;
  margin-top: 8rpx;
}
.plane_image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
}
.plane_view {
  margin-top: 10rpx;
}
/* plane end */

/* Music star */
.Music_view {
  position: relative;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.Music {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right:75rpx;
  top: 75rpx;
}
/* Music end */

/* mid star */
.home_mid {
  width: 360rpx;
  height: 500rpx;
  float: left;
  margin-left: 10rpx;
  margin-top: 20rpx;
  text-align: center;
}
.home_mid_image{
  width: 360rpx;
  height: 400rpx;
}
.home_mid_text {
  font-size: 38rpx;
}
.home_mid_text1 {
   font-size: 30rpx;
}

/* mid stop */

/* bottom start */
.bottom1 {
  width: 740rpx;
  background-color: rgba(238, 238, 238, 0.945);
  margin-top:40rpx;
  text-align: center;
  margin-left: 5rpx;
}
.bottom1_text{
  font-size: 25rpx;
}
.bottom1_text2{
  font-size: 30rpx;
  color: #01a1dd;
}

/* bottom stop */


/* end star */
.end_view {
  width: 740rpx;
  height: 550rpx;
  margin-left: 5rpx;
  margin-top:30rpx;
  position: relative;
}
.end_image {
  width: 740rpx;
  height: 550rpx;
}
.end_text{
  position: absolute;
  top: 230rpx;
  left: 150rpx;
}
.end_text1{
  position: absolute;
  top: 285rpx;
  left: 50rpx;
}
.end_text2{
  position: absolute;
  top: 345rpx;
  left: 150rpx;
  background-color: #01a1dd;
  border-radius: 5rpx;
  color: #fff;
}

.end_end {
  padding-top: 50rpx;
}
/* end end */