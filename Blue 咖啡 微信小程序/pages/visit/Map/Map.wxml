<!--pages/visit/Map/Map.wxml-->
<!-- map star -->
<view class='map_view'>
<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" show-location style="width: 100%; height: 1000rpx;"></map>
</view>

<view class='bottom_view'>
  <view class='input_area'>
  <input placeholder="输入查询地点" focus='true'/></view>
  <view  class="btn-area" >
  <button size="mini" bindtap="bindButtonTap">搜索</button>
  </view>
</view>
<!-- map end -->